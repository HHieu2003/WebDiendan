<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Trang chủ</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/navbar', { isAuthenticated: isAuthenticated, userRole: userRole, notifications: notifications }) %>
  <div class="banner">
    <img src="/img/banner.jpg" alt="banner" style="width: 100%; height: 450px; margin-bottom: 20px; margin-top: 70px;">
  </div>
  <div class="container pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Diễn đàn sinh viên</h2>
    
    </div>
    <% if (forums && forums.length > 0) { %>
      <% forums.forEach(forum => { %>
        <div class="row mb-3 mt-2">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">
                  <a href="/forum/topic/<%= forum._id %>" class="text-primary" style="width: 950px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; white-space: normal;">
                    Chủ đề: <%= forum.title %>
                  </a>
                </h5>
                <p class="card-text"><%= forum.content.substring(0, 100) %>...</p>
                <p class="card-text text-muted">Được tạo bởi: <%= forum.user ? forum.user.name : 'Không xác định' %> - <%= new Date(forum.createdAt).toLocaleString() %></p>
              </div>
            </div>
          </div>
        </div>
        <% const relatedPosts = posts.filter(post => post.forum.toString() === forum._id.toString() && !post.pending); %>
        <% if (relatedPosts.length > 0) { %>
          <div class="row mb-3">
            <div class="col-12">
              <h6 class="mb-3" style="margin-left: 9px">Bài viết trong chủ đề này:</h6>
              <div class="list-group">
                <% relatedPosts.slice(0, 3).forEach(post => { %>
                  <a href="/forum/topic/<%= forum._id %>/post/<%= post._id %>" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                      <h6 class="mb-1 text-primary" style="width: 950px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; white-space: normal;">
                        <%= post.title %>
                      </h6>
                      <small class="text-muted"><%= new Date(post.createdAt).toLocaleString() %></small>
                    </div>
                    <p class="mb-1 text-muted"><%= post.content.substring(0, 50) %>...</p>
                    <small class="text-muted">Bởi: <%= post.user ? post.user.name : 'Không xác định' %></small>
                  </a>
                <% }) %>
              </div>
            </div>
          </div>
        <% } else { %>
          <div class="row mb-5">
            <div class="col-12">
              <p class="text-muted">Chưa có bài viết nào trong chủ đề này.</p>
            </div>
          </div>
        <% } %>
        <hr style="border-top: 3px solid #1667cb;">
      <% }) %>
    <% } else { %>
      <div class="alert alert-warning">Chưa có chủ đề nào.</div>
    <% } %>
    <div class="text-center mt-4">
      <a href="/forum" class="btn btn-primary">Xem tất cả chủ đề</a>
    </div>
  </div>
  <%- include('partials/footer') %>
</body>
</html>