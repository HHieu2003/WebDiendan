<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Quản lý Sinh viên</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/navbar') %>
  <h1>Quản lý Sinh viên</h1>
  <a href="/forum">Đi đến Diễn đàn</a>
  <h2>Thêm/Sửa Sinh viên</h2>
  <form action="<%= student ? '/students/edit/' + student._id : '/students/add' %>" method="POST">
    <label>Tên:</label><br>
    <input type="text" name="name" value="<%= student ? student.name : '' %>" required><br>
    <label>Email:</label><br>
    <input type="email" name="email" value="<%= student ? student.email : '' %>" required><br>
    <label>Mật khẩu:</label><br>
    <input type="password" name="password" value="<%= student ? student.password : '' %>" required><br>
    <button type="submit"><%= student ? 'Cập nhật' : 'Thêm' %></button>
  </form>

  <h2>Danh sách Sinh viên</h2>
  <table>
    <thead>
      <tr>
        <th>Tên</th>
        <th>Email</th>
        <th>Mật khẩu</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% students.forEach(student => { %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.email %></td>
          <td><%= student.password %></td>
          <td>
            <a href="/students/edit/<%= student._id %>">Sửa</a>
            <a href="/students/delete/<%= student._id %>" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>