<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chủ đề: <%= forum.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/topic.css">
  <style>
    /* Tiêu đề chủ đề */
    .forum-heading {
      border-bottom: 2px solid #dee2e6;
      padding-bottom: 0.5rem;
      margin-bottom: 1.5rem;
      color: #0d6efd;
    }
  
    /* Ảnh bài viết */
    .post-image {
      object-fit: cover;
      height: 150px;
      border-radius: 0.5rem;
    }
  
    /* Nút chia sẻ */
    .share-btn {
      border-radius: 2rem;
      font-size: 0.85rem;
    }
  
    /* Flash message container */
    .flash-message-container {
      max-width: 400px;
      width: 100%;
    }
  
    @media (max-width: 768px) {
      .post-image {
        height: 120px;
      }
    }
  </style>
  <style>
    .post-list-heading {
      font-size: 1.75rem;
      font-weight: 600;
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: #094678; /* Bootstrap green */
      border-left: 5px solid #3917fe;
      padding-left: 0.75rem;
    }
  
    @media (max-width: 768px) {
      .post-list-heading {
        font-size: 1.4rem;
      }
    }
  </style>
  <style>
    /* Container bao quanh phần thông tin chủ đề */
    .forum-info-box {
      border: 1px solid #dee2e6;
      border-left: 5px solid #0d6efd;
      border-radius: 0.5rem;
      padding: 1.5rem;
      background-color: #f8f9fa;
      margin-bottom: 2rem;
      box-shadow: 0 2px 6px rgba(0,0,0,0.03);
    }
  
    .forum-heading {
      font-size: 1.75rem;
      font-weight: bold;
      color: #0d6efd;
      margin-bottom: 1rem;
    }
  
    .forum-info-box p {
      margin-bottom: 0.5rem;
      font-size: 1rem;
      color: #343a40;
    }
  
    .forum-info-box strong {
      color: #212529;
    }
  
    @media (max-width: 768px) {
      .forum-heading {
        font-size: 1.4rem;
      }
  
      .forum-info-box {
        padding: 1rem;
      }
    }
  </style>
  
</head>
<body>
  <%- include('partials/navbar', { isAuthenticated: isAuthenticated, userRole: userRole, notifications: notifications }) %>
  <div class="container mt-5 pt-5">
    <!-- Thông báo Flash -->
    <div class="flash-message-container position-fixed top-0 end-0 p-3" style="z-index: 1050;">
      <% if (success_msg && success_msg.length > 0) { %>
        <div id="successAlert" class="alert alert-success alert-dismissible fade show shadow" role="alert">
          <%= success_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      <% if (error_msg && error_msg.length > 0) { %>
        <div id="errorAlert" class="alert alert-danger alert-dismissible fade show shadow" role="alert">
          <%= error_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
    </div>

   
    <div class="forum-info-box">
      <h2 class="forum-heading">Chủ đề: <%= forum.title %></h2>
      <p>
        <strong>Người tạo:</strong> <%= forum.user ? forum.user.name : 'Không xác định' %> | 
        <strong>Ngày tạo:</strong> <%= new Date(forum.createdAt).toLocaleString() %>
        <% if (forum.teacher) { %>
          | <strong>Quản lý bởi:</strong> <%= forum.teacher.name %>
        <% } %>
      </p>
      <p><strong>Nội dung: </strong> <%= forum.content %></p>
    </div>
    

    <h3 class="post-list-heading">Danh Sách bài viết</h3>

    <% if (posts.length === 0) { %>
      <p>Chưa có bài viết nào được duyệt.</p>
    <% } else { %>
      <div class="mb-4">
        <% posts.forEach(post => { %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><a href="/forum/topic/<%= forum._id %>/post/<%= post._id %>"><%= post.title %></a></h5>
              <p class="card-text">
                <strong>Người đăng:</strong> <%= post.user ? post.user.name : 'Không xác định' %> | 
                <strong>Ngày đăng:</strong> <%= new Date(post.createdAt).toLocaleString() %>
              </p>
              <p class="card-text"><%= post.content.substring(0, 100) %>...</p>
              <a 
              class="btn btn-outline-primary btn-sm mb-2 share-btn"
              href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent(`https://yourdomain.com/forum/topic/${forum._id}/post/${post._id}`) %>"
              target="_blank"
              rel="noopener noreferrer"
            >
              <i class="bi bi-facebook"></i> Chia sẻ Facebook
            </a>
            
              <% if (post.images && post.images.length > 0) { %>
                <div class="row">
                  <% post.images.forEach(image => { %>
                    <div class="col-md-3 col-6 mb-2">
                      <img src="<%= image %>" class="img-fluid post-image" alt="Image">
                    </div>
                  <% }) %>
                </div>
                
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
    <% if (isAuthenticated) { %>
      <a href="/forum/topic/<%= forum._id %>/add-post" class="btn btn-primary mb-3">Thêm bài viết</a>
    <% } %>
    <% if ((userRole === 'teacher' && forum.teacher && forum.teacher._id.toString() === req.userId) || userRole === 'admin') { %>
      <a href="/forum/topic/<%= forum._id %>/pending-posts" class="btn btn-info mb-3">Xem bài viết chờ duyệt</a>
    <% } %>
  </div>
  <%- include('partials/footer') %>
  <script>
    // Tự động ẩn thông báo flash sau 5 giây
    setTimeout(() => {
      ['successAlert', 'errorAlert'].forEach(id => {
        const alert = document.getElementById(id);
        if (alert) {
          const bsAlert = new bootstrap.Alert(alert);
          bsAlert.close();
        }
      });
    }, 5000);
  </script>
</body>
</html>

