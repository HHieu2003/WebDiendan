<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Chủ đề: <%= forum.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container mt-4">
    <h1 class="mb-4">Chủ đề: <%= forum.title %></h1>
    <div class="card mb-4">
      <div class="card-body">
        <p class="card-text"><%= forum.content %></p>
        <p class="card-text text-muted">Bởi: <%= forum.user ? forum.user.name : 'Người dùng không xác định' %></p>
      </div>
    </div>
    <h2 class="mb-3">Danh sách Bài viết</h2>
    <% if (isAuthenticated) { %>
      <a href="/forum/topic/<%= forum._id %>/add-post" class="btn btn-primary mb-3">Tạo Bài viết Mới</a>
    <% } else { %>
      <p class="alert alert-warning mb-3">Vui lòng <a href="/auth/login" class="link-primary">đăng nhập</a> để tạo bài viết.</p>
    <% } %>
    <% if (posts && posts.length > 0) { %>
      <div class="list-group">
        <% posts.forEach(post => { %>
          <a href="/forum/topic/<%= forum._id %>/post/<%= post._id %>" class="list-group-item list-group-item-action">
            <h5 class="mb-1"><%= post.title %></h5>
            <p class="mb-1"><%= post.content.substring(0, 100) %>...</p>
            <small class="text-muted">Bởi: <%= post.user ? post.user.name : 'Người dùng không xác định' %></small>
          </a>
        <% }) %>
      </div>
    <% } else { %>
      <p class="alert alert-warning">Chưa có bài viết nào.</p>
    <% } %>
    <div class="mt-4 text-center">
      <a href="/forum" class="btn btn-secondary">Quay lại Diễn đàn</a>
    </div>
  </div>
</body>
</html>