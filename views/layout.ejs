<!-- views/layout.ejs -->
<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Responsive -->
  <title><%= title || 'Hệ thống Quản lý Sinh viên' %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Tùy chỉnh CSS (nếu cần) -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Hệ thống Quản lý Sinh viên</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if (isAuthenticated) { %>
            <li class="nav-item">
              <a class="nav-link" href="/users">Quản lý Người dùng</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/forum">Diễn đàn</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile">Trang cá nhân</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Đăng xuất</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Đăng nhập</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/register">Đăng ký</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Container chính -->
  <div class="container mt-4">
    <!-- Hiển thị thông báo lỗi/thành công -->
    <% if (error) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>
    <% if (success) { %>
      <div class="alert alert-success" role="alert">
        <%= success %>
      </div>
    <% } %>

    <!-- Nội dung chính -->
    <%- body %>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3 mt-5">
    <p>&copy; 2025 Hệ thống Quản lý Sinh viên</p>
  </footer>

  <!-- Bootstrap JS và Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>